{
  "name": "selfserver",
  "version": "0.0.1",
  "description": "Opinionated Self-Hosting Platform",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "PORT=8080 nodemon .",
    "start:client": "cd client && yarn serve",
    "build:client": "cd client && yarn build",
    "build": "npm run build:client && pkg -C GZip . "
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ],
    "scripts": [
      "sockets/**/*.socket.js",
      "events/**/*.event.js"
    ],
    "targets": [
      "node14-linux"
    ],
    "outputPath": "release"
  },
  "author": "Jason Hazel",
  "license": "GPL-3.0-only",
  "dependencies": {
    "date-fns": "^2.26.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.15",
    "pkg": "^5.4.1",
    "systeminformation": "^5.9.15",
    "vuex-persist": "^3.1.3",
    "ws": "^8.3.0"
  }
}
